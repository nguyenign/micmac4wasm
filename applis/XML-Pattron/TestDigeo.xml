     <SectionImages>
           <ImageDigeo>
              <KeyOrPat>   ^F020_DSC_1855_MpDcraw8B_GB.tif </KeyOrPat>
              <VisuCarac>
                   <Dir> Pyr </Dir>
                   <Dyn> 0.005 </Dyn>
              </VisuCarac>
           </ImageDigeo>
           <PyramideImage>
              <TypeNumeriqueOfNiv>
                 <Type> eTN_u_int2 </Type>
                 <Niv> 1 </Niv>
              </TypeNumeriqueOfNiv>
              <MaximDyn> true </MaximDyn>
              <TypePyramide>
                  <!-- <NivPyramBasique> 32 </NivPyramBasique> -->
                  <PyramideGaussienne>
                       <NbByOctave> 5 </NbByOctave>
