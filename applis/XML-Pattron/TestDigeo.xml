           </SiftCarac>
     </SectionCaracImages>

     <SectionTest>
         <VerifExtrema>  false </VerifExtrema>
     </SectionTest>

     <SectionWorkSpace>
           <DirectoryChantier> ../micmac_data/DigiTest/SubM/  </DirectoryChantier>
