               <Key> Key-Assoc-Pyram-MM </Key>
               <Dir>  Pyr/ </Dir>
               <CreateFileWhenExist> true </CreateFileWhenExist>
               <Force8B > true   </Force8B>
               <Dyn > 0.00390625 </Dyn>
           </SauvPyram>
           <ShowTimes> 10 </ShowTimes>


