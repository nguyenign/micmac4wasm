<!-- 
      Parametrage pour les points de liaison pour une triangulation.
   Il s'agit de l'etape 0, elle doit etre suivie de 1, 2 et 3.
   Cette etape 0 ne va que jusqu'a la resolution 16 et les 
   les orientation exportees ne laisse libre que le cap.

       Ce fichier a ete mis au point pour un vol drone heliporte.
   Les valeus suivie d'un "#" en commentaire doivent etre modifiee
   pour utilisation sur d'autre mission (terrestre, aerien ...)

   #N : indique une modification numerique, une fois les valeurs 
   fixees pour un type de chantier, il n'est pas necessaire de les
   modifier pour un autre.

   #S : indique une modification de nom;
-->
<ParamMICMAC  Subst="@$#1">
<Section_Terrain>  

    <!--   Px1IncCalc : l'incertitude est liee au terrain elle est en metre,
          ici 10 m c'est bcp pour un helico a 30 m.

          Px2IncCalc : en pixel, c'est lie au defaut de mise en place
     -->
    
    <IntervAltimetrie>
        <ZIncCalc>   30.0 </ZIncCalc>    <!-- metres -->
        <ZIncZonage>   0.0 </ZIncZonage>    <!-- metres -->
    </IntervAltimetrie>

   <Planimetrie>
<!--
       <MasqueTerrain >
           <MT_Image > TM.tif </MT_Image>
           <MT_Xml>  TM.xml </MT_Xml>
       </MasqueTerrain>
-->
    </Planimetrie>


</Section_Terrain>
<!--  ************************************************************* 
         Parametres lies a la prise de vue,
         independamment de son exploitation
         par le correlateur
-->
<Section_PriseDeVue >
     <GeomImages> eGeomImageOri </GeomImages> 
     <Images >  
          <ImPat >   ^${PatternAllIm}  </ImPat>  
     </Images>
     <NomsGeometrieImage>
         <FCND_Mode_GeomIm>
               <FCND_GeomCalc> Key-Assoc-Im2OrFinale  </FCND_GeomCalc>  
         </FCND_Mode_GeomIm>
     </NomsGeometrieImage>

</Section_PriseDeVue>
<!--  *************************************************************
       Parametres fixant le comportement
     de l'algo de mise en correspondance
-->
<Section_MEC >
	<!-- 
	     Etape 0, ne sera pas calculee, DeZoom vaut -1,
	elle permet de donner des valeur par defaut aux autres
	parametres
	-->
        <NbMinImagesVisibles> 4 </NbMinImagesVisibles>
        <TypePyramImage>
               <Resol>   2            </Resol>
               <TypeEl>  eFloat32Bits </TypeEl>
        </TypePyramImage>

	<EtapeMEC>
            <DeZoom >  -1             </DeZoom>
	    <DynamiqueCorrel> eCoeffCorrelStd </DynamiqueCorrel>
	    <AggregCorr> eAggregSymetrique </AggregCorr>

            <SzW >       1               </SzW>


	    <!--
	    <TypeWCorr> eWInCorrelRectSpec </TypeWCorr>
	    <NbIterFenSpec> 4 </NbIterFenSpec>
	    <AlgoRegul>  eAlgo2PrgDyn </AlgoRegul>
	    -->

	    <AlgoRegul>  eAlgoMaxOfScore </AlgoRegul>
	    <!--
	    <AlgoRegul>  eAlgoCoxRoy </AlgoRegul>
	    -->
            <ModeInterpolation> eInterpolBiLin </ModeInterpolation>

            <ZRegul>  0.00     </ZRegul>
	    <!-- <ZRegul_Quad> 0.1 </ZRegul_Quad>  -->
	    <ZPas>   0.5     </ZPas>
            <ZDilatAlti>  4  </ZDilatAlti>
	    <ZDilatPlani> 4  </ZDilatPlani>

            <SsResolOptim> 1 </SsResolOptim>

            <!-- <Gen8Bits_Px1> true </Gen8Bits_Px1> -->

            <ModulationProgDyn Portee="Globale">
                 <EtapeProgDyn>
                      <ModeAgreg> ePrgDAgrSomme </ModeAgreg>
                      <NbDir>   10               </NbDir>
                  </EtapeProgDyn>
                  <Px1PenteMax>   100.0    </Px1PenteMax>
            </ModulationProgDyn>
            <CoxRoy8Cnx > true </CoxRoy8Cnx>     <!-- Def=false-->
            <CoxRoyUChar>  false </CoxRoyUChar>   <!-- Def=true-->


            <GenImagesCorrel> true </GenImagesCorrel>
            <AttenRelatifSeuilZ> 0.2 </AttenRelatifSeuilZ>
	</EtapeMEC>

	<EtapeMEC> 
              <DeZoom >  64    </DeZoom> 
              <SeuilAttenZRegul> 15 </SeuilAttenZRegul>
        </EtapeMEC>
	<EtapeMEC> 
              <DeZoom >  32    </DeZoom> 
              <SeuilAttenZRegul> 15 </SeuilAttenZRegul>
        </EtapeMEC>



	<EtapeMEC> 
                <DeZoom >  16                </DeZoom> 
                <ZRegul>  0.02     </ZRegul>
	        <AlgoRegul Portee="Globale">  eAlgo2PrgDyn </AlgoRegul>
                <SeuilAttenZRegul> 7 </SeuilAttenZRegul>
                <GenerePartiesCachees >
                       <ByMkF> true </ByMkF>
                       <SeuilUsePC> 3 </SeuilUsePC>
                </GenerePartiesCachees>
        </EtapeMEC>

	<EtapeMEC> 
                <DeZoom >  8                </DeZoom> 
                <ZRegul>  0.03     </ZRegul>
                <SeuilAttenZRegul> 4 </SeuilAttenZRegul>
                <GenerePartiesCachees >
                       <ByMkF> true </ByMkF>
                       <SeuilUsePC > 6 </SeuilUsePC>
                </GenerePartiesCachees>
        </EtapeMEC>



	<EtapeMEC> 
                <DeZoom >  4                </DeZoom> 
                <ZRegul Portee="Globale">  0.05     </ZRegul>
                <SeuilAttenZRegul> 2 </SeuilAttenZRegul>
                <GenerePartiesCachees >
                       <ByMkF> true </ByMkF>
                      <SeuilUsePC > 8 </SeuilUsePC>
                </GenerePartiesCachees>
        </EtapeMEC>



	<EtapeMEC> 
                <DeZoom >  2                </DeZoom> 
                <GenerePartiesCachees >
                  <PasDisc>  1.0 </PasDisc>
                  <SeuilUsePC>  10  </SeuilUsePC>
                  <Dequant> true </Dequant>
                  <PatternApply > ^dsc_[0-9]{4}.tif   </PatternApply>
                  <KeyCalcPC> Key-OpIm-Assoc-Im2PC </KeyCalcPC>
                  <ByMkF> true </ByMkF>
                  <MakeOrthoParImage >
                      <KeyCalcInput> Key-Assoc-Gray2Coul </KeyCalcInput>
                      <KeyCalcOutput >  Key-OpIm-Assoc-Im2Ort </KeyCalcOutput>
                      <KeyCalcIncidHor> Key-OpIm-Assoc-Im2Incid </KeyCalcIncidHor>
                      <!-- Par rapport a la resolution des image R1 -->
                      <ResolIm> 1.0 </ResolIm>
                      <CalcIncAZMoy> true </CalcIncAZMoy>
                  </MakeOrthoParImage>
                </GenerePartiesCachees>
        </EtapeMEC>


	<EtapeMEC> 
                <DeZoom >  1                </DeZoom> 
                <GenerePartiesCachees >
                      <SeuilUsePC > 3 </SeuilUsePC>
                </GenerePartiesCachees>
        </EtapeMEC>

	<EtapeMEC> 
	       <DeZoom >  1  </DeZoom> 
	       <ZPas>   1.0     </ZPas>
               <AlgoRegul> eAlgoDequant </AlgoRegul>
        </EtapeMEC>



</Section_MEC>
<!--  *************************************************************
       Parametres fixant les resultats
     devant etre produits par l'algo
-->
<Section_Results >


    <GeomMNT> eGeomMNTEuclid  </GeomMNT>
    <DoMEC >  true </DoMEC> 
    <ZoomMakeTA> 4 </ZoomMakeTA>
    <GammaVisu> 1.0 </GammaVisu>
    <ZoomVisuLiaison> -1 </ZoomVisuLiaison>
    <DoNothingBut>
	<ButDoOrtho>  true </ButDoOrtho>
    </DoNothingBut>
    <!--
    -->
</Section_Results>
<!--  *************************************************************
       Parametres lies a la gestions
     du "chantier" sur la machine
-->
<Section_WorkSpace >
     <WorkDir >  ThisDir </WorkDir> 
     <TmpMEC > TerWMasq/ </TmpMEC>
     <TmpPyr > TerWMasq/ </TmpPyr>
     <TmpResult > TerWMasq/ </TmpResult>

     <AvalaibleMemory> 1024 </AvalaibleMemory>
     <SzDalleMin>  400 </SzDalleMin>
     <SzDalleMax>  500  </SzDalleMax>
     <SzRecouvrtDalles> 50 </SzRecouvrtDalles>
     <NomChantier> Geom-Im </NomChantier>

<!--
     <FirstEtapeMEC> 5 </FirstEtapeMEC>
     <FirstBoiteMEC>  11 </FirstBoiteMEC>
-->
     <ByProcess> 2 </ByProcess>


</Section_WorkSpace>

<Section_Vrac> 
</Section_Vrac>

</ParamMICMAC>

